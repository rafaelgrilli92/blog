@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Posts</h1>

<div class="row">
    <div class="col-lg-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data Publicação</th>
                    <th>Titulo</th>
                    <th>Categoria</th>
                    <th>Publicado</th>
                   <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (code_4_lazy.Models.Post post in ViewBag.Posts)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@(((DateTime)post.DataPublicacao).ToString("dd/MM/yyyy HH:mm"))</td>
                        <td>@Html.ActionLink(post.Titulo, "Dados", new { id = post.Id })</td>
                        <td>@(post.Categoria == null ? "Sem Categoria" : post.Categoria.NomeCategoria)</td>
                        <td>@(post.Publicado ? "Sim" : "Não")</td>
                        <td><a href="/Admin/Posts/Excluir?id=@post.Id"><span class="fa fa-remove"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
