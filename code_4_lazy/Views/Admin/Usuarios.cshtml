@{
    ViewBag.Title = "Usuários";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1>Usuários</h1>

<div class="row">
    <div class="col-lg-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                   <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (code_4_lazy.Models.Usuario usuario in ViewBag.Usuarios)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@Html.ActionLink(usuario.Nome, "Dados", new { id = usuario.Id })</td>
                        <td>@usuario.Email</td>
                        <td><a href="/Admin/Usuarios/Excluir?id=@usuario.Id"><span class="fa fa-remove"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
