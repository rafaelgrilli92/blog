@model List<code_4_lazy.Models.Post>
@{ViewBag.Menu = "categorias";}

<h2>@ViewBag.Titulo</h2>
<hr class="divider" />
<div class="post-list">

    @if (Model.Count == 0)
    {
        <div class="post-list-box">
            <h4>Nenhum post encontrado.</h4>
        </div>
    }
    else
    {
        foreach (code_4_lazy.Models.Post post in Model)
        {
            <div class="post-list-box">
                <div class="data-post">@(((DateTime)post.DataPublicacao).ToString("dd/MM/yyyy"))</div>
                <div class="titulo-post">@Html.ActionLink(post.Titulo, "Index", "Post", new { postId = post.Id, year = ((DateTime)post.DataPublicacao).ToString("yyyy"), month = ((DateTime)post.DataPublicacao).ToString("MM"), titulo = post.Titulo.FriendlyUrl() }, null)</div>
                <div class="descricao-post">@post.Descricao</div>
            </div>
        }
    }

   
</div>
